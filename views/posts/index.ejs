  <!DOCTYPE html>
<html lang="en">
  <%- include('../partials/header') %>


<body  >
  <%- include('../partials/navbar') %>


    <div class="container " style="margin-top: 60px; margin-left: 450px; ">
      <div class="col s12 m8   center-align">
      <%post.forEach(function(post){%>
            
              <div class="card post grey lighten-5 z-depth-2 " style="margin-left:100px;width: 450px;">
                <div class="name">

               <a href="#">  <i class="fas fa-user-circle" >  <%=post.user.username%>  </i>  </a> 
               
                </div>
                
                <div class="card-image">

                  <img src="<%=post.image%>">

                </div>
                <div class="card-content ">
                  <span class="card-title"><strong><%=post.title%></strong></span>
                  <p><%=post.description%></p>
                </div>
                <div class="card-content" style="text-align:left;">

                  <%if(user){%>
                  <form style=" float: left;" action="/post/like/<%=post.id%>?_method=PUT" method="POST">
                    <button type="submit"
                      style=" background-color: Transparent;background-repeat:no-repeat; border: none; cursor: pointer;">
                      <i class="fa fa-thumbs-up" style="font-size:25px;color:gray;"></i></button>
                    <a href="/posts/comment/<%=post._id%>/new">
                      <i class="fa fa-comments" style="font-size:27px; color:gray;padding-left: 25px;">
                      </i></a>


                  </form>
                  <%}%>

              <%if(user&&post.user.equals(user._id)){%>
                  <form style="float: right;" action="/posts/<%=post._id%>?_method=DELETE" method="POST">

                    <button class="btn waves-effect waves-light"
                      style="background-color: #d32f2f;  ">Delete</button><br>
                  </form>
                  <%}%>
            
          </div>
          
          
          <div class="card-content" style="text-align:left;">
            <%if(user){%>
                  <%if(post.likes.length>0){%>
                  <p><b style="font-weight: 10px;">
                      <%=post.likes.length%> </b>
                    <strong style="font-weight: 50px;"><i>Thumbs Up</i></strong></p>

                  <%}%>
            <%}%>
                  <%if(user){%>
                  <% if(post.comments.length>0){%>
                  <% if(post.comments.length==1){%>
                  <a href="/posts/comment/<%=post._id%>/new" style=" color:gray ;">View comment</p></a>

                  <%} else {%>
                  <a href="/posts/comment/<%=post._id%>/new" style="color:gray ;">View all <%=post.comments.length%>
                    comments</p></a>
                  <%}%>
                      <% } %>
                  <%}%>
     
          </div>
  </div>
       
        <% })%>
     
                </div>

              </div>

                <script language="javascript">
                  if(screen.width>=1000) {document.write("<style>body{zoom:88%;}</style>");}
                  </script> 



</body>

</html>